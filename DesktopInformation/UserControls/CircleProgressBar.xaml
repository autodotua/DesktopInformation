                            <Path Fill="{TemplateBinding Background}">
                                <Path.Data>
                                    <MultiBinding Converter="{StaticResource CircleProgressValueConverter}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="0"/>
